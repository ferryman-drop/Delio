# Скопіюйте цей файл в .env і заповніть своїми значеннями
# Copy this file to .env and fill with your values

# Telegram Bot Token від @BotFather
TG_TOKEN=your_telegram_token_here

# Google Gemini API Key
# Отримайте на https://aistudio.google.com/app/apikey
GEMINI_KEY=your_gemini_key_here

# DeepSeek API Key
# Отримайте на https://platform.deepseek.com/
DEEPSEEK_KEY=your_deepseek_key_here

# Налаштування логування
LOG_LEVEL=INFO

# Налаштування БД
DATABASE_PATH=./data/chat_history.db

# Максимум повідомлень в контексті
MAX_HISTORY=10

# Timeout для API запитів (в секундах)
API_TIMEOUT=30

# Rate limiting
RATE_LIMIT_REQUESTS=30
# Window in seconds
RATE_LIMIT_PERIOD=60

# Admin Telegram ID (повинно бути числом)
ADMIN_TELEGRAM_ID=your_admin_telegram_id_here
# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379